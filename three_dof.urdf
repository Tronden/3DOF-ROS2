<?xml version="1.0"?>
<robot name="simple_robot">

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.1"/>  
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>  
      </material>
    </visual>
  </link>

  <!-- Column link -->
  <link name="column_link">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>  
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>  
      </material>
    </visual>
  </link>

  <!-- Plate link -->
  <link name="plate_link">
    <visual>
      <geometry>
        <cylinder radius="0.35" length="0.02"/> 
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>  
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.35" length="0.02"/> 
      </geometry>
    </collision>
  </link>

  <!-- Ball link -->
  <link name="ball_link">
    <visual>
      <geometry>
        <sphere radius="0.02"/>  
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>  
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.02"/>  
      </geometry>
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <link name="point_link">
  </link>

  <link name="ballpoint_link">
  </link>

  <!-- Joints -->
  <!-- Fixed joint between base and column -->
  <joint name="base_to_column" type="fixed">
    <parent link="base_link"/>
    <child link="column_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/> 
  </joint>

  <!-- Revolute joint for plate to rotate -->
  <joint name="pitch" type="revolute">
    <parent link="column_link"/>
    <child link="point_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>  
    <axis xyz="1 0 0"/>
    <limit lower="-0.8" upper="0.8" effort="10" velocity="1"/>
  </joint>

  <joint name="roll" type="revolute">
    <parent link="point_link"/>
    <child link="plate_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>  
    <axis xyz="0 1 0"/>
    <limit lower="-0.8" upper="0.8" effort="10" velocity="1"/>
  </joint>

  <!-- Prismatic joint for the ball -->
  <joint name="ballx" type="prismatic">
    <parent link="plate_link"/>
    <child link="ballpoint_link"/>
    <origin xyz="0 0 0.02" rpy="0 0 0"/> 
    <axis xyz="1 0 0"/> 
    <limit effort="1000.0" lower="-0.35" upper="0.35" velocity="0.5"/>
  </joint>

  <joint name="bally" type="prismatic">
    <parent link="ballpoint_link"/>
    <child link="ball_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/>  
    <limit effort="1000.0" lower="-0.35" upper="0.35" velocity="0.5"/>
  </joint>

</robot>
